
<ul class="breadcrumbs">
  <li><a href="/">Home</a></li>
  <li class="current"><a href="#">Products</a></li>
</ul>

<% if @products %>
	<% @products.each do |product| %>
		<div class="product-panel">
			<a href="<%= product.url%>"><img class="product-image" src="<%= product.img_filepath%> "/></a>
			<h5 id="product-name"><%= product.name %></h5>
			<h6 class="subheader" id="product-price">$<%= product.price %></h6>
			<p id="product-description"><%= product.description %></p>
			<div class="product-round-buttons">
				<a href="favourites/<%= product.id %>/add" class="round-button" id="favorite-button">fav</a><a href="https://www.facebook.com/dialog/share?app_id=145634995501895&display=popup&href=<%= product.url %>&redirect_uri=https%3A%2F%2Fdevelopers.facebook.com%2Ftools%2Fexplorer" class="round-button" id="facebook-button">fb</a><a href="https://twitter.com/share?text=I%20want%20this!%20%20<%= product.url%>" class="round-button" id="twitter-button">tweet</a><a href="mailto:someone@somewhere.com?subject=Gift Genie wants you to check this out: <%= product.name %> &body=Visit the link for more information: <%= product.url %>" class="round-button" id="email-button">email</a>
			</div>
		</div>
	<% end %>
<% end %>