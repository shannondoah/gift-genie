<h1><a href="/">Gift Genie</a></h1>

<% if !@logged_in %>
<h2>Login</h2>
<form method="post" action="/login">
  <div>
    <label>Email:</label>
    <input type="text" name="email" value="<%= @user.email %>">
  </div>
  <div>
    <label>Password:</label>
    <input type="password" name="password" value="<%= @user.password %>">
  </div>

  <div>
    <input type="submit" value="Login" >
  </div>
</form>
<div>
<a href="/users/new">Don't have an account?Sign up here... It's FREE!</a>
</div>
<% else %>
<p>
<a href="/users/<% @user.id %>">My profile</a>
</p>
<p>
Hello <%= @user.email %> : <a href="/logout">Logout</a>
</p>
<% end %>
<form method="get" action="/products">
    <input type="text" name="category" >
    <input type="submit" value="Search">
</form>


<% @categories.each do |category|  %>
<a href="/products?category=<%= category.name %>"><img src="<%= category.img_filepath %>"></a>
<p><%= category.name %></p>
<% end %>

