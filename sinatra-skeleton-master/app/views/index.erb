

<% @categories.each do |category|  %>

<div class="large-5 small-6 columns">
	<a href="/products?category=<%= category.name %>" class="category-image"><img src="<%= category.img_filepath %>"></a>
	<div class="category-name-container">
		<h5 id="category-name"><%= category.name %></h5>
	</div>
</div>

<% end %>

