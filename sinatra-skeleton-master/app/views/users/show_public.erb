<div class="cover_photo">
  <img src="/user_img/cover_img/winding_road.jpg"> <%#= @user.cover_photo %>
    <div class="avatar">
      <img src="/user_img/female2.jpg"/>
      <%#= @user.avatar %>
    </div>
</div>

<h1><%=@user.name %>'s WishList</h1>

<div class="filter_bar">
  <label>Filter By:</label>
  <select>
    <option value="<% :price %>">Price</option>
    <option value="<% :created_at %>">Newest First</option>
    <option value="<% :created_at %>">Oldest First</option>
</select>
</div>

<div class="product_info">
  <% @user.favourites.each do |fave|%>
    <% product = Product.find(fave.product_id) %>
      <div class='product-listview'>
      <table>
        <tr>
        <td><img src="<%= product.img_filepath%>"/></td>
          <td ><p><%= product.name %></p>
          <p id="description"><%= product.description %></p>
          <h3>$<%= product.price %></h3></td>
          <td><a href="#"><div id="get_button">I'm on it!</div></a></td>
      </div>
  <% end %>
</div>